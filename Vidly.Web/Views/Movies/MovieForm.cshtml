@model MovieFormViewModel
@{
    ViewData["Title"] = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Movie == null)
{
    <h2>New Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.Name)
        @Html.TextBoxFor(c => c.Movie.Name, new { @class = "form-control", @style="width:400px" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.NumInStock)
        @Html.TextBoxFor(c => c.Movie.NumInStock, new { @class = "form-control", @style="width:400px" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.ReleaseDate)
        @Html.TextBoxFor(c => c.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control", @style="width:400px" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.DateAdded)
        @Html.TextBoxFor(c => c.Movie.DateAdded, "{0:d MMM yyyy}", new { @class = "form-control", @style="width:400px" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.GenreId)
        @Html.DropDownListFor(c => c.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control", @style="width:400px" })
    </div>
    @Html.HiddenFor(c => c.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

